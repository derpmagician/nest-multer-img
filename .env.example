# Configuración de la base de datos PostgreSQL
# IMPORTANTE: Cambia estos valores por los reales y NO subas este archivo a GitHub

DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=TU_CONTRASEÑA_REAL_AQUI
DB_NAME=nestjs_multer

# Configuración de la aplicación
PORT=3000
NODE_ENV=development

# Configuración de archivos
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=2097152

# Configuración de JWT (para futuro uso)
# Genera una clave secreta segura: openssl rand -base64 32
JWT_SECRET=GENERA_UNA_CLAVE_SECRETA_AQUI
JWT_EXPIRATION=24h
